<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/enter_messenger_communication"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Messenger进程通信"/>

    <Button
        android:id="@+id/enter_aidl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="AIDL"/>

    <Button
        android:id="@+id/enter_provider"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="ContentProvider"/>

    <Button
        android:id="@+id/enter_socket"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Socket聊天"/>

    <Button
        android:id="@+id/enter_handler"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Handler"/>

</LinearLayout>